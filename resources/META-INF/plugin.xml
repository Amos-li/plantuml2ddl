<idea-plugin>
  <id>com.github.xwsg</id>
  <name>PlantUML2DDL</name>
  <version>1.3.0</version>
  <vendor email="xtremaplux@gmail.com" url="http://www.github.com/xwsg">xwsg</vendor>

  <description><![CDATA[
      PlantUML DDL Converter
      <br/>
      Convert PlantUML to MySQL DDL: Right-click in the PlantUML file or Alt-Insert -> Generate -> 'PlantUML -> MySQL'.
      Convert PlantUML to PostgreSQL DDL: Right-click in the PlantUML file or Alt-Insert -> Generate -> 'PlantUML -> PostgreSQL'.
      Convert MySQL DDL to PlantUML: Right-click in the DDL file or Alt-Insert -> Generate -> 'MySQL -> PlantUML'.
      <br/>
      <a href="http://www.github.com/xwsg/plantuml2ddl">Source code</a> available on GitHub.
    ]]></description>

  <change-notes><![CDATA[
      <ul>
        <li>1.3.0 - Support convert PlantUML to PostgreSQL DDL.</li>
        <li>1.2.0 - Support convert Mysql DDL to PlantUML.</li>
        <li>1.1.0 - Support table commentï¼Œcolumn comment and column default modifier.</li>
        <li>1.0.1 - Exclude bold symbol; sql name add time.</li>
        <li>1.0.0 - First revision.</li>
      </ul>
    ]]>
  </change-notes>
    
    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>
    
    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    -->
    <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
      <action id="PlantUML2MySQL" class="com.github.xwsg.plantuml.action.PlantUml2MysqlAction"
          text="PlantUML -> MySQL" description="Convert PlantUML to MySQL DDL">
        <add-to-group group-id="GenerateGroup" anchor="last"/>
      </action>
      <action id="PlantUML2PostgreSQL" class="com.github.xwsg.plantuml.action.PlantUml2PgAction"
              text="PlantUML -> PostgreSQL" description="Convert PlantUML to PostgreSQL DDL">
          <add-to-group group-id="GenerateGroup" anchor="last"/>
      </action>
      <action id="MySQL2PlantUML" class="com.github.xwsg.plantuml.action.Mysql2PlantUmlAction"
              text="MySQL -> PlantUML" description="Convert DDL to PlantUML">
        <add-to-group group-id="GenerateGroup" anchor="last"/>
      </action>
  </actions>

</idea-plugin>